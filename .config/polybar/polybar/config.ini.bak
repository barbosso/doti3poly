[colors]
background 	= #1a1d24
foreground 	= #D8DEE9
green = #0f0

[bar/main_bar]
bottom = false
width = 98%
height = 24
offset-x = 1%
offset-y = 1%
radius = 0.0
fixed-center = true

background = ${colors.background}
foreground =  ${colors.foreground}

padding-left = 2
padding-right = 2

module-margin-left = 1
module-margin-right = 1

font-0 = "Iosevka Nerd Font: antialias=true: size=10; 2"
font-1 = "FontAwesome: antialias=true: size=10; 2"
font-2 = "Material Design Icons: antialias=true: style=Regular: size=10; 2"

modules-left = workspaces sep cpu memory network
modules-center = date 
modules-right = sep pulseaudio-control sep

tray-position = right
tray-padding = 0
pseudo-transparency = false
tray-offset-y = 0%
tray-offset-x = 0%
tray-detached = false

wm-restack = i3

override-redirect = true
scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev
separator = |

; If true, the bar will not shift its
; contents when the tray changes
tray-maxsize = 16


[module/pipewire-simple]
type = custom/script
exec = ~/.config/polybar/scripts/pipewire-simple/pipewire-simple.sh
interval = 3
click-right = exec pavucontrol &
click-left = ~/.config/polybar/scripts/pipewire-simple/pipewire-simple.sh --mute &
scroll-up = ~/.config/polybar/scripts/pipewire-simple/pipewire-simple.sh --up &
scroll-down = ~/.config/polybar/scripts/pipewire-simple/pipewire-simple.sh --down &

[module/network]
type = internal/network
interface = eth0

interval = 1
label-connected =  %downspeed%  %upspeed%

[module/todo]
type = custom/script
exec = todo raw todo | head -n 1

; [module/sep]
; type = custom/text
; content = "|"



[module/pulseaudio-control]
type = custom/script
tail = true
label-foreground = ${colors.foreground}

exec = pulseaudio-control.bash --icons-volume " , " --icon-muted " " --node-nicknames-from "device" --node-nickname "alsa_output.usb-f389_USB_PnP_Audio_Device-00.analog-stereo.monitor" --node-nickname "alsa_output.usb-f389_USB_PnP_Audio_Device-00.analog-stereo.monitor" listen
click-right = pulseaudio-control.bash --node-blacklist "" next-node 
click-left = pulseaudio-control.bash togmute
click-middle = exec pavucontrol &
scroll-up = pulseaudio-control.bash --volume-max 130 up
scroll-down = pulseaudio-control.bash --volume-max 130 down

[module/cpu]
type = internal/cpu
interval = 1

format = <label>
format-prefix = 
label = "%percentage%%"

[module/date]
type = internal/date
label-active-font = 0
interval = 1.0

date = %A, %d %B
time = at %k:%M:%S
date-alt = It's %A, %d %B %Y
time-alt = at %k:%M:%S

format = <label>
format-prefix = ""
label = %date% %time%

[module/fs-root]
type = internal/fs
mount-0 = /
interval = 60
fixed-values = true
format-mounted = <label-mounted>
format-mounted-prefix =  
format-unmounted = <label-unmounted>
format-unmounted-prefix = 
label-mounted = " /: %free%"
label-unmounted = " /: NA"

[module/fs-home]
type = internal/fs
mount-0 = /home
interval = 60
fixed-values = true
format-mounted = <label-mounted>
format-mounted-prefix =  
format-unmounted = <label-unmounted>
format-unmounted-prefix = 
label-mounted = " /home: %free%"
label-unmounted = " /home: NA"

[module/fs-hdd1]
type = internal/fs
mount-0 = /home/hannes/HDD1
interval = 60
fixed-values = true
format-mounted = <label-mounted>
format-mounted-prefix =  
format-unmounted = <label-unmounted>
format-unmounted-prefix = 
label-mounted = " /hdd1: %free%"
label-unmounted = " /hdd1: NA"

[module/fs-hdd2]
type = internal/fs
mount-0 = /home/hannes/HDD2
interval = 60
fixed-values = true
format-mounted = <label-mounted>
format-mounted-prefix =  
format-unmounted = <label-unmounted>
format-unmounted-prefix = 
label-mounted = " /hdd2: %free%"
label-unmounted = " /hdd2: NA"

[module/filesystem]
type = internal/fs
label-active-font = 0
mount-0 = /
mount-1 = /home

interval = 60

fixed-values = true

format-mounted = <label-mounted>
format-mounted-prefix =  
format-unmounted = <label-unmounted>
format-unmounted-prefix =  

label-mounted = " %mountpoint%: %free%"
label-unmounted = " %mountpoint%: NA"

[module/memory]
type = internal/memory
label-active-font = 0
interval = 1

format = <label>
format-prefix = 
label = "%mb_used%"

[module/workspaces]
type = internal/xworkspaces
label-active-font = 0

pin-workspaces = true

enable-click = true
enable-scroll = true

icon-0 = 1;| 1 |
icon-1 = 2;| 2 |
icon-2 = 3;| 3 |
icon-3 = 4;| 4 |
icon-4 = 5;| 5 |
icon-5 = 6;| 6 |
icon-6 = 7;| 7 |
icon-7 = 8;| 8 |
icon-8 = 9;| 9 |
icon-default = 0

format = <label-state>

label-monitor = %name%
label-active = %icon%
label-occupied = %icon%
label-urgent = %icon%
label-empty = %icon%
label-empty-foreground = ${colors.foreground}

label-active-padding = 1
label-urgent-padding = 1
label-occupied-padding = 1
label-empty-padding = 1
